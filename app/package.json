{
  "name": "app",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "pretest:e2e:coverage": "rm -frv tests/e2e/report tests/e2e/tmp tests/e2e/.nyc_output tests/e2e/coverage build instrumented coverage dist output .nyc_output merged-coverage coverage.json",
    "test:e2e:coverage": "start-test 'yarn start-it' :3000 'yarn test-it'",
    "start-it": "NODE_ENV=e2e PORT=3000 nyc --silent yarn start",
    "test-it": "BASE_URL='http://localhost:3000' yarn test:e2e",
    "test:e2e": "cypress run --browser chrome --headless --config-file tests/e2e/cypress.config.js",
    "build": "webpack --mode production && sed -i \"s|BUILD_NUMBER|$GITHUB_SHA|g\" build/index.html",
    "start": "webpack server --mode development",
    "precoverage": "(rm -frv coverage.json reports && merged-coverage) && (mkdir -p reports) && cp tests/unit/coverage/coverage-final.json reports/unit.json && cp tests/integration/coverage/coverage-final.json reports/integration.json",
    "coverage": "nyc merge reports && mv coverage.json .nyc_output/out.json",
    "postcoverage": "nyc report --reporter=text-summary --reporter=text --reporter=html --reporter=lcov --report-dir=merged-coverage",
    "test:integration:coverage": "yarn test:integration --coverage",
    "test:integration": "jest --config=jest.config.integration.js",
    "test:unit:coverage": "yarn test:unit --coverage",
    "test:unit": "jest --config=jest.config.unit.js"
  },
  "license": "ISC",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@cypress/code-coverage": "^3.10.0",
    "@istanbuljs/nyc-config-babel": "^3.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "babel-loader": "^9.1.0",
    "babel-plugin-istanbul": "^6.1.1",
    "css-loader": "^6.7.3",
    "cypress": "^12.3.0",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.5.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "mini-css-extract-plugin": "^2.7.2",
    "msw": "^0.49.2",
    "nyc": "^15.1.0",
    "serve": "^14.1.2",
    "start-server-and-test": "^1.15.2",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1",
    "whatwg-fetch": "^3.6.2"
  }
}
